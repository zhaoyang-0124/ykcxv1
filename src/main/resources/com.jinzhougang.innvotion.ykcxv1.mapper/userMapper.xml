<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jinzhougang.innvotion.ykcxv1.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.jinzhougang.innvotion.ykcxv1.entity.User">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="createTime" column="createTime"/>
        <result property="email" column="email"/>
        <result property="lastLoginTime" column="lastLoginTime"/>
    </resultMap>

    <select id="findByUsername" parameterType="string" resultMap="UserResultMap">
        SELECT username, password
        FROM users
        WHERE username = #{username}
    </select>

    <insert id="insert" parameterType="com.jinzhougang.innvotion.ykcxv1.entity.User">
        INSERT INTO users (id,username, password)
        VALUES (#{id},#{username}, #{password})
    </insert>

    <update id="updateLastLoginTime">
        UPDATE users
        SET lastLoginTime = #{lastLoginTime}
        WHERE username = #{username}
    </update>

</mapper>